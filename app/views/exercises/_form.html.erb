<%= simple_form_for(@exercise) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="container">
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body_part %>
    <%= f.input :description %>
    <%= f.input :equipment %>
    <%= f.input :video_url %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
</div>

<% end %>