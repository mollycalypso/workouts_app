<%= render "banner" %>

<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <% @workouts.each do |workout| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card my-4">
        <div class="card-body">
          <h4 class="card-title"><%= link_to workout['name'], workout_path(workout) %></h4>
          <p class="card-text">Difficulty Level: <%= workout['difficulty_level'] %></p>
          <p class="card-text">Equipment: <%= workout['equipment'] %></p>
          <p class="card-text">Details: <%= workout['details'] %></p>
          <div class="row">
            <%= image_tag "https://picsum.photos/200", class: "avatar" %>
            <p class="card-text"><%= workout['avatar'] %></p>
          </div>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


<br>

<% if policy(Workout).create? %>
  <%= link_to "New Workout", new_workout_path %>
<% end %>